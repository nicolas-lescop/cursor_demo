{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./app/*"
            ]
        },
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom",
            "vite/client",
            "node"
        ]
    },
    "include": [
        "app",
        "app.config.ts"
    ]
}